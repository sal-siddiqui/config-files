// Please install the following extensions:
// 1. Code Runner – Run code snippets or files via keyboard shortcuts.
// 2. djLint – Format and lint Django, Jinja, and other templating languages.
// 3. Error Lens – Highlight errors, warnings, and info messages inline in your code.
// 4. Everforest – Color theme of choice (replace with your preferred theme).
// 5. Flutter – Tools and support for Flutter development.
// 6. Highlight Matching Tag – Visually highlight matching HTML/XML tags.
// 7. HTML End Tag Labels – Display end tags for better HTML readability.
// 8. Jinja – Syntax highlighting and support for Jinja templates.
// 9. Jinja Snippets – Useful code snippets for Jinja templating.
// 10. Material Icon Theme – Icon theme of choice (replace with your preferred icon theme).
// 11. Prettier – Automatically format your code for consistent styling.
// 12. Ruff – A fast Python linter and formatter.
// 13. Python – Official Python extension with IntelliSense, linting, and debugging support.

{
  // =============================
  // THEME & COLOR CUSTOMIZATION
  // =============================
  "workbench.colorTheme": "Everforest Dark", // Set the main color theme
  "workbench.colorCustomizations": {
    "[Everforest Dark]": {
      "list.hoverBackground": "#3d484d90", // Background color when hovering over list items
      "scrollbar.shadow": "#2d353b" // Scrollbar shadow color
    }
  },
  "workbench.iconTheme": "material-icon-theme", // Use Material Icon Theme for better visuals
  "material-icon-theme.folders.theme": "classic", // Classic folder icons
  "material-icon-theme.hidesExplorerArrows": true, // Hide folder arrows in explorer

  // =============================
  // LAYOUT & INTERFACE SETTINGS
  // =============================
  "workbench.sideBar.location": "right", // Move sidebar to the right
  "workbench.activityBar.location": "hidden", // Hide the activity bar
  "workbench.statusBar.visible": false, // Hide the status bar for a cleaner look
  "workbench.layoutControl.enabled": false, // Disable layout adjustments
  "workbench.startupEditor": "none", // Prevent editor from opening files on startup
  "workbench.tips.enabled": false, // Disable startup tips
  "breadcrumbs.enabled": false, // Remove breadcrumbs navigation
  "window.commandCenter": false, // Hide command center
  "window.menuBarVisibility": "toggle", // Auto-hide menu bar with toggle option
  "workbench.tree.renderIndentGuides": "none", // Remove indentation guides in file explorer

  // =============================
  // EDITOR CORE SETTINGS
  // =============================
  "editor.fontFamily": "Consolas", // Set editor font
  "editor.fontSize": 15, // Editor font size
  "editor.lineHeight": 2.0, // Increase line height for readability
  "editor.wordWrap": "on", // Enable word wrapping
  "editor.formatOnSave": true, // Auto-format code on save
  "editor.cursorBlinking": "solid", // Disable cursor blinking animation
  "editor.cursorSmoothCaretAnimation": "on", // Smooth cursor movement

  // =============================
  // EDITOR VISUAL ELEMENTS
  // =============================
  "editor.stickyScroll.enabled": false, // Disable sticky headers
  "editor.renderLineHighlight": "none", // No line highlighting
  "editor.selectionHighlight": false, // No selection highlighting
  "editor.guides.indentation": false, // No indentation guides
  "editor.renderWhitespace": "none", // Hide whitespace markers
  "editor.lightbulb.enabled": "off", // Remove code suggestion lightbulb
  "editor.occurrencesHighlight": "off", // No variable occurrences highlight
  "editor.minimap.enabled": false, // Disable code minimap
  "editor.foldingHighlight": false, // No code folding highlight
  "editor.roundedSelection": false, // Square selection box
  "editor.hideCursorInOverviewRuler": false, // Show cursor in overview
  "editor.overviewRulerBorder": false, // Remove overview ruler border
  "editor.scrollbar.horizontal": "hidden", // Hide horizontal scrollbar
  "editor.inlayHints.enabled": "off", // Turn off inlay hints

  // =============================
  // TERMINAL CONFIGURATION
  // =============================
  "terminal.integrated.fontSize": 15, // Terminal font size
  "terminal.integrated.lineHeight": 1.5, // Improve terminal line spacing
  "terminal.integrated.copyOnSelection": true, // Auto-copy on selection
  "terminal.integrated.cursorStyleInactive": "none", // Hide inactive cursor
  "terminal.integrated.hideOnStartup": "always", // Keep terminal hidden on startup
  "terminal.integrated.tabs.enabled": false, // Remove terminal tabs
  "terminal.integrated.tabs.showActions": "never", // Hide terminal tab actions

  // =============================
  // EXPLORER SETTINGS
  // =============================
  "explorer.compactFolders": false, // Show full folder names without collapsing
  "explorer.autoOpenDroppedFile": true, // Auto-open dropped files
  "explorer.confirmDelete": false, // No delete confirmation prompt
  "explorer.confirmDragAndDrop": false, // No drag-and-drop confirmation

  // =============================
  // ZEN MODE SETTINGS
  // =============================
  "zenMode.centerLayout": false, // Disable centered layout
  "zenMode.hideLineNumbers": false, // Show line numbers in Zen Mode

  // =============================
  // LANGUAGE-SPECIFIC FORMATTING
  // =============================
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier for JSON files
  },
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint" // djLint for templating languages
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff" // Ruff for Python code
  },

  // =============================
  // EXTENSION SETTINGS
  // =============================
  "code-runner.runInTerminal": true, // Run code via terminal using Code Runner
  "code-runner.saveAllFilesBeforeRun": true, // Save all files before execution
  "code-runner.executorMap": {
    "python": "clear && cd $dir && python $fileName" // Python run command
  },

  // =============================
  // VERSION CONTROL SETTINGS
  // =============================
  "git.decorations.enabled": false, // Hide Git decorations
  "scm.diffDecorations": "none", // Remove diff decorations

  // =============================
  // DART & FLUTTER SETTINGS
  // =============================
  "dart.lineLength": 150, // Set Dart line length
  "dart.flutterSdkPath": "C:\\dev\\flutter", // Flutter SDK path
  "dart.previewFlutterUiGuides": true, // Enable Flutter UI guides
  "dart.previewFlutterUiGuidesCustomTracking": true, // Custom tracking for Flutter UI
  "dart.flutterGutterIcons": false // Hide Flutter gutter icons
}
