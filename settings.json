{
  // Theme customizations
  "workbench.colorCustomizations": {
    "[Everforest Dark]": {
      "scrollbar.shadow": "#2d353b",
      "panel.background": "#272e33",
      "sideBar.background": "#272e33",
      "panel.border": "#272e33",
      "sideBar.border": "#272e33"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Everforest Dark]": {}
  },

  // UI Settings
  "workbench.colorTheme": "Everforest Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "window.title": " ",
  "workbench.tips.enabled": false,
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,

  // Editor Settings
  "editor.fontFamily": "Consolas",
  "editor.fontSize": 15,
  "editor.lineHeight": 2.0,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.stickyScroll.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.selectionHighlight": false,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.occurrencesHighlight": "off",
  "editor.foldingHighlight": false,
  "editor.inlineSuggest.enabled": false,

  // Terminal Configuration
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.copyOnSelection": true,

  // File Explorer
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 20,

  // Language Specific
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[html][django-html]": {
    // "editor.defaultFormatter": "monosans.djlint" (enable extension)
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json][jsonc][typescript][javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "java.inlayHints.parameterNames.enabled": "none",

  // Extensions
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "python": "clear && cd $dir && python $fileName"
  },
  "emmet.preferences": { "output.selfClosingStyle": "xhtml" },
  "djlint.maxLineLength": 50,
  "djlint.maxAttributeLength": 50,
  "djlint.formatAttributeTemplateTags": true,
  "djlint.maxBlankLines": 2,
  "ruff.lineLength": 100,

  // Version Control
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none"
}
