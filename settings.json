{
  // Theme customizations
  "workbench.colorCustomizations": {
    "[Everforest Dark]": {
      "scrollbar.shadow": "#2d353b",
      "panel.background": "#272e33",
      "sideBar.background": "#272e33",
      "panel.border": "#272e33",
      "sideBar.border": "#272e33"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Everforest Dark]": {}
  },
  "workbench.colorTheme": "Everforest Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "window.title": " ",
  "workbench.tips.enabled": false,
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,

  // Editor Settings
  "editor.fontFamily": "Consolas",
  "editor.fontSize": 15,
  "editor.lineHeight": 2.0,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.stickyScroll.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.selectionHighlight": false,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.occurrencesHighlight": "off",
  "editor.foldingHighlight": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Terminal Configuration
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.copyOnSelection": true,

  // File Explorer
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 20,
  "files.dialog.defaultPath": "C:\\Users\\salma\\Documents",
  "workbench.editor.enablePreview": false,

  // Language Specific
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[html][django-html][css][javascript][typescript]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[json][jsonc][jsonl]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "java.foldingRange.enabled": true,
  "java.server.launchMode": "Hybrid",
  "java.completion.guessMethodArguments": "insertBestGuessedArguments",
  "java.inlayHints.parameterNames.enabled": "none",
  "java.completion.chain.enabled": true,
  "java.showBuildStatusOnStart.enabled": "notification",
  "java.format.onType.enabled": true,
  "java.edit.smartSemicolonDetection.enabled": true,
  "java.saveActions.cleanup": true,
  "java.completion.matchCase": "firstLetter",
  "java.references.includeAccessors": true,

  // Extensions
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "java": "clear; & 'C:\\Program Files\\Java\\jdk-24\\bin\\java.exe' '@C:\\Users\\salma\\AppData\\Local\\Temp\\cp_1bwxwwh7wzu0bwtdespqge7tb.argfile' 'com.spring_commerce.main.App'"
  },
  "emmet.preferences": { "output.selfClosingStyle": "xhtml" },
  "djlint.useVenv": false,
  "djlint.pythonPath": "C:\\Users\\salma\\AppData\\Local\\Programs\\Python\\Python313\\python.exe",

  // Version Control
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none"
}
